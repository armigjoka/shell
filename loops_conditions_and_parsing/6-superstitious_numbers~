#!/usr/bin/env bash
# Bash script that displays bad luck from China for the 4th loop iteration, displays bed luck from Japan for 9th loop iteration and displays 17 bed luck from Italy for the 17 iterations.

i=1

while [ $i -le 20 ]
do
    echo "$i
case $i in
4)
			echo "bad luck from China"
			     	  ;;

					9) 
						echo "bad luck from Japan"
						     	  ;;

							  17) 
							      echo "bad luck from Italy"
							      	   ;;



								   esac

	fi
	(( i++ ))
done 
